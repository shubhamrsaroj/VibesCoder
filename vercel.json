{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build",
          "buildCommand": "cd client && DISABLE_ESLINT_PLUGIN=true EXTEND_ESLINT=true ESLINT_NO_DEV_ERRORS=true CI=false npm install --no-audit --no-fund --legacy-peer-deps && npm run build"
        }
      }
    ],
    "routes": [
      {
        "handle": "filesystem"
      },
      {
        "src": "/static/(.*)",
        "dest": "/client/static/$1"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/client/assets/$1"
      },
      {
        "src": "/favicon.ico",
        "dest": "/client/favicon.ico"
      },
      {
        "src": "/manifest.json",
        "dest": "/client/manifest.json"
      },
      {
        "src": "/(.*)",
        "dest": "/client/index.html"
      }
    ],
    "env": {
      "CI": "false",
      "DISABLE_ESLINT_PLUGIN": "true",
      "EXTEND_ESLINT": "true",
      "ESLINT_NO_DEV_ERRORS": "true",
      "SKIP_PREFLIGHT_CHECK": "true",
      "NPM_FLAGS": "--no-audit --no-fund --legacy-peer-deps"
    }
  } 